<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ocean_background1">


    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/resume_icon"
        android:contentDescription="@string/app_name"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:src="@drawable/resume_icon"
        android:text="@string/panorama"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp" />

    <ImageButton
        android:id="@+id/videoViewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/playButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:adjustViewBounds="true"
        android:background="@drawable/grid_icon"
        android:maxHeight="60dp"
        android:maxWidth="60dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/grid_icon" />

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/playButton"
        android:layout_marginEnd="43dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/myplan_icon"
        android:maxHeight="80dp"
        android:maxWidth="80dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/myplan_icon" />

    <ImageView
        android:id="@+id/MainView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/videoViewButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:maxHeight="110dp"
        android:maxWidth="110dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:tint="@color/colorPrimaryDark"
        app:srcCompat="@drawable/quantum_ic_cardboard_white_24" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:background="@drawable/settings_icon"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/settings_icon" />

    <ImageButton
        android:id="@+id/infoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:background="@drawable/info_icon"
        android:maxHeight="60dp"
        android:maxWidth="60dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/info_icon" />


</RelativeLayout>
